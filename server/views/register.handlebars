<div class="flex justify-center mt-10">
    <div class="card w-80 bg-base-100 shadow-xl m-1 text-primary-content">
        <div class="card-body">
            <h2 class="card-title">Register</h2>
            <form action="/auth/register" method="post" class="form-control">
                <label class="label">
                    <span class="label-text">Username</span>
                </label>
                <input type="text" class="input input-bordered w-full max-w-xs" name="username" />
                 <label class="label">
                    <span class="label-text">Password</span>
                </label>
                <input type="password" class="input input-bordered w-full max-w-xs" name="password" />

                <div class="card-actions text-center mt-2">
                    <button class="btn btn-ghost btn-block" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>