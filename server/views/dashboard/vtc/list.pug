extends ../../layouts/main

block body
    div(class="overflow-x-auto flex justify-center p-5 bg-base-100")
        table(class="table w-full")
            thead
                tr
                    th
                    th Name
                    th Members
                    th Action
            tbody()
                for vtc in vtcList
                    tr
                        th=vtcList.indexOf(vtc)
                        th=vtc.name
                        th=vtc.members.length
                        th
                            div(class="btn-group")
                                a(class="btn", href=`/dashboard/vtc/view/${vtc.name}`) View
                                if !user.vtc
                                    a(class="btn", href=`/dashboard/vtc/join/${vtc.name}`) Join